<!DOCTYPE html>

<title>Статья &laquo;{{ article.title }}&raquo;</title>

{% block body %}
    <h1>Статья &laquo;{{ article.title }}&raquo;</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>ID</th>
                <td>{{ article.id }}</td>
            </tr>
            <tr>
                <th>Создана</th>
                <td>{{ article.createdAt|date('d F Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>Изменена</th>
                <td>{{ article.updatedAt|date('d F Y H:i:s') }}</td>
            </tr>
            <tr>
                <th>Заголовок</th>
                <td>{{ article.title }}</td>
            </tr>
            <tr>
                <th>ЧПУ</th>
                <td>{{ article.slug }}</td>
            </tr>
            <tr>
                <th>Текст статьи</th>
                <td>{{ article.description }}</td>
            </tr>
            <tr>
                <th>Опубликовано с</th>
                <td>{{ article.availableFrom ? article.availableFrom|date('d F Y') : '' }}</td>
            </tr>
            <tr>
                <th>Автор</th>
                <td>{{ article.authorRep|raw }}</td>
            </tr>
            <tr>
                <th>Тэги</th>
                <td>{{ article.tagsRep }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('articles_index') }}">&larr; Вернуться в список статей</a>

    <a href="{{ path('article_edit', {'slug': article.slug}) }}">изменить</a>

    {{ include('article/_delete_form.html.twig') }}
{% endblock %}
