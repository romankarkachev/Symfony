<!DOCTYPE html>

<title>Список статей</title>

{% block body %}
    <h1>Список статей</h1>

    {{ include('article/search.html.twig') }}

    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Создана</th>
                <th>Изменена</th>
                <th>Заголовок</th>
                <th>ЧПУ</th>
                <th>Текст статьи</th>
                <th>Дата публикации</th>
                <th>действия</th>
            </tr>
        </thead>
        <tbody>
        {% for article in articles %}
            <tr>
                <td>{{ article.id }}</td>
                <td>{{ article.createdAt|date('d F Y H:i:s') }}</td>
                <td>{{ article.updatedAt|date('d F Y H:i:s') }}</td>
                <td>{{ article.title }}</td>
                <td>{{ article.slug }}</td>
                <td>{{ article.description }}</td>
                <td>{{ article.availableFrom ? article.availableFrom|date('d F Y') : '' }}</td>
                <td>
                    <a href="{{ path('article_show', {'slug': article.slug}) }}">просмотр</a>
                    <a href="{{ path('article_edit', {'slug': article.slug}) }}">изменить</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">записей нет</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('default_index') }}">&larr; На главную</a>
    <a href="{{ path('article_new_by_author') }}">Новая авторская статья &rarr;</a>
    <a href="{{ path('article_new_tagged') }}">Новая статья с тэгами &rarr;</a>
{% endblock %}
